@model IEnumerable<Project.Models.MRTTicket>

<html>
<head>
    <title>Purchaser List</title>
</head>
<body>
    <h5>Purchaser List</h5>
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(x => x.ViewId)</th>
            <th>@Html.DisplayNameFor(x => x.ViewDateTime)</th>
            <th>@Html.DisplayNameFor(x => x.Name)</th>
            <th>@Html.DisplayNameFor(x => x.Phone)</th>
            <th>@Html.DisplayNameFor(x => x.IndexStatus)</th>
            <th>@Html.DisplayNameFor(x => x.IndexFStation)</th>
            <th>@Html.DisplayNameFor(x => x.IndexTStation)</th>
            <th>@Html.DisplayNameFor(x => x.Amount)</th>
            <th>@Html.DisplayNameFor(x => x)</th>
        </tr>

        @foreach (var x in Model)
        {
            <tr>
                <td>@Html.DisplayFor(y => x.ViewId)</td>
                <td>@Html.DisplayFor(y => x.ViewDateTime)</td>
                <td>@Html.DisplayFor(y => x.Name)</td>
                <td>@Html.DisplayFor(y => x.Phone)</td>
                <td>@Html.DisplayFor(y => x.DictStatus[x.IndexStatus])</td>
                <td>@Html.DisplayFor(y => x.DictFStation[x.IndexFStation])</td>
                <td>@Html.DisplayFor(y => x.DictTStation[x.IndexTStation])</td>
                <td>@Html.DisplayFor(y => x.Amount)</td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = x.ViewId }) |
                    @Html.ActionLink("Edit", "Edit", new { id = x.ViewId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = x.ViewId }) |
                    @Html.ActionLink("Mail", "SendMail", new { id = x.ViewId })
                </td>
            </tr>
        }
    </table>
</body>
</html>
