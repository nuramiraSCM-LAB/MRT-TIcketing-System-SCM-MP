@model Project.Models.MRTTicket
@using Microsoft.AspNetCore.Identity
@using Project.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/MRTTicket.css" rel="stylesheet" />

    @{
        ViewData["Title"] = "Edit";
        if (SignInManager.IsSignedIn(User))
        {
            Layout = "~/Views/Shared/_Layout.cshtml";
        }
        else
            Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }

    <h1>Edit</h1>

    <h4>MRTTicket</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="txt" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IC" class="control-label"></label>
                    <input asp-for="IC" class="txt" />
                    <span asp-validation-for="IC" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="txt" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" style="width:150px" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

